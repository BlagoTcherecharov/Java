package com.mycompany.java;
import java.util.*;

public class Java 
{
    public static void main(String[] args) 
    {
        Timer timer = new Timer();
        timer.schedule(new TimerTask() 
        {
            @Override
            public void run() 
            {
              Date now = new Date();
              System.out.println("The current time is " + now);
            }
        }, 0, 1000);
    }
}
